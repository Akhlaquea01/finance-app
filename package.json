{
  "name": "finance-management",
  "version": "1.0.0",
  "description": "Finance Management Application - Full Stack",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "docker:up": "docker-compose -f docker-compose.test.yml --env-file .env up -d --build",
    "docker:down": "docker-compose -f docker-compose.test.yml down",
    "docker:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.test.yml restart",
    "docker:ps": "docker-compose -f docker-compose.test.yml ps"
  },
  "keywords": [
    "finance",
    "management",
    "nextjs",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Finance Management Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

